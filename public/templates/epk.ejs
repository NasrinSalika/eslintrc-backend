<!DOCTYPE html>
<html lang="en">
<!-- Export -->
<head>
  <title></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link href="https://fonts.googleapis.com/css?family=Lato:400,700,900&display=swap" rel="stylesheet">

  <style>
    * {
      box-sizing: border-box
    }

    html,
    body {
      height: auto;
    }

    body {
      font-family: 'Lato', sans-serif;
    }

    .main-box {
      width: 100%;
    }

    .border-box {
      border: 1px solid #ddd;
      padding: 2.5rem;
      page-break-after: always;
      size: 7in 9.25in;
      margin: 50px 0px;
      min-height: 1390px;
    }

    .shadow-img {
      position: absolute;
      bottom: 0;
      right: 0;
    }

    .grey-txt {
      color: #6A6A6A
    }

    .f-bold {
      font-weight: bold
    }

    .images-center {
      padding: 5rem 0;
    }

    .color-dots {
      width: 10px;
      height: 10px;
      border-radius: 50%;
    }

    .color-code {
      color: #9A9A9A;
      font-style: italic
    }

    .logo {
      width: 10rem;
      max-width: 10rem;
    }

    .logo-sm {
      width: 3rem;
      max-width: 3rem;
    }
  </style>

<body>
  <div class="p-5 main-box">
    <div class="border-box d-flex flex-column position-relative">
      <div class="text-center my-auto images-center">
        <img src="<%-base_url%>images/logo.png" class="logo" />

        <%if (ifEpkExsist) {%>
          <h1 class="mt-2">
            <%-ifEpkExsist.epkName%>
          </h1>
          <%}%>
            <p style="color:#9A9A9A">
              <%-count%> Screens
            </p>
      </div>
      <div class="d-flex mt-auto align-items-end">
        <div class="ml-auto text-right">
          <%if(ifEpkExsist) {%>
            <h3 style="color: #006ADA;" class="f-bold">by
              <%-firstName%>
                <%-lastName%>
            </h3>
            <%}%>
              <p class="grey-txt m-0">Exported on
                <%-date%>
              </p>
              <div class="ml-auto text-right">
                <p class="m-0" style="color: #9A9A9A">1</p>
              </div>
        </div>
      </div>

      <img src="<%-base_url%>images/shadow.png" class="shadow-img" />

    </div>

  </div>
  <% templates.forEach((template, index)=> { %>
    <div class="p-5 main-box">

      <div style="page-break-before: always"></div>

      <div class="border-box d-flex flex-column position-relative">

        <div class="d-flex align-items-center">
          <img src="<%-base_url%>images/logo.png" class="logo-sm" />

          <h5 class="m-0 pl-2 f-bold">
            <%-template.epkId.epkName%>
          </h5>
        </div>

        <div class="text-center my-auto images-center">
          <img src="<%-template.url%>" class="img-fluid" style="max-width: 50%;margin: 0 auto" />
        </div>

        <img src="<%-base_url%>images/shadow.png" class="shadow-img" />
        <div style="padding: 50px">
          <div class="ml-auto text-right">
            <p class="m-0" style="color: #9A9A9A">
              <%-index + 2%>
            </p>
          </div>

        </div>

      </div>
    </div>
  <% }) %>
</body>

</html>